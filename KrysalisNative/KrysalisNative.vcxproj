    <ResonitePath Condition="Exists('C:\Program Files (x86)\Steam\steamapps\common\Resonite\')">C:\Program Files (x86)\Steam\steamapps\common\Resonite\</ResonitePath>
    <ResonitePath Condition="Exists('$(HOME)/.steam/steam/steamapps/common/Resonite/')">$(HOME)/.steam/steam/steamapps/common/Resonite/</ResonitePath>
    <ResonitePath Condition="'$(ResonitePath)'==''">$(MSBuildThisFileDirectory)Resonite/</ResonitePath>
    <ModsDirectory>$(ResonitePath)rml_mods</ModsDirectory>
    <KrysalisDirectory>$(ModsDirectory)Krysalis</KrysalisDirectory>
  </PropertyGroup>
  <Target Name="PostBuild" AfterTargets="PostBuildEvent" Condition="'$(CopyToMods)'=='true'">
    <Message Text="Attempting to copy $(TargetFileName) to $(KrysalisDirectory)" Importance="high" />
    <Copy SourceFiles="$(TargetDir)$(TargetFileName)" DestinationFolder="$(KrysalisDirectory)" ContinueOnError="true" />
  </Target>
  <Import Project="$(VCTargetsPath)\Microsoft.Cpp.targets" />
  <Target Name="EnsureNuGetPackageBuildImports" BeforeTargets="PrepareForBuild">
    <PropertyGroup>
      <ErrorText>This project references NuGet package(s) that are missing on this computer. Use NuGet Package Restore to download them.  For more information, see http://go.microsoft.com/fwlink/?LinkID=322105. The missing file is {0}.</ErrorText>
    </PropertyGroup>
    <Error Condition="!Exists('..\packages\tencent.rapidjson.1.1.1\build\tencent.rapidjson.targets')" Text="$([System.String]::Format('$(ErrorText)', '..\packages\tencent.rapidjson.1.1.1\build\tencent.rapidjson.targets'))" />
  </Target>
  <Import Project="..\packages\tencent.rapidjson.1.1.1\build\tencent.rapidjson.targets" Condition="Exists('..\packages\tencent.rapidjson.1.1.1\build\tencent.rapidjson.targets')" />
  <PropertyGroup>
    <AssetsDirectory>$(ProjectDir)..\\assets</AssetsDirectory>
    <MaterialsDirectory>$(AssetsDirectory)\\materials</MaterialsDirectory>
    <MeshesDirectory>$(AssetsDirectory)\\meshes</MeshesDirectory>
    <BinDirectory>$(AssetsDirectory)\\bin</BinDirectory>
    <FilameshExecutable>$(BinDirectory)\\filamesh.exe</FilameshExecutable>
    <MatcExecutable>$(BinDirectory)\\matc.exe</MatcExecutable>
  </PropertyGroup>
  <ItemGroup>
    <MaterialFiles Include="$(MaterialsDirectory)\\*.mat" />
    <MeshFiles Include="$(MeshesDirectory)\\*.obj" />
  </ItemGroup>
  <Target Name="CompileMaterials" BeforeTargets="Build">
    <Exec Command="$(MatcExecutable) -o $(MaterialsDirectory)\\%(MaterialFiles.Filename).filamat %(MaterialFiles.FullPath)"
      Condition="Exists('%(MaterialFiles.FullPath)') AND (!Exists('$(MaterialsDirectory)\\%(MaterialFiles.Filename).filamat') OR %(MaterialFiles.FullPath) > $(MaterialsDirectory)\\%(MaterialFiles.Filename).filamat)" />
  </Target>

  <Target Name="CompileMeshes" BeforeTargets="Build">
    <Exec Command="$(FilameshExecutable) -o $(MeshesDirectory)\\%(MeshFiles.Filename).filamesh %(MeshFiles.FullPath)"
      Condition="Exists('%(MeshFiles.FullPath)') AND (!Exists('$(MeshesDirectory)\\%(MeshFiles.Filename).filamesh') OR %(MeshFiles.FullPath) > $(MeshesDirectory)\\%(MeshFiles.Filename).filamesh)" />
  </Target>

  <ItemGroup>
    <AssetFiles Include="$(AssetsDirectory)\\**\\*.*" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="Build" DependsOnTargets="CompileMaterials;CompileMeshes" Condition="'$(CopyToMods)'=='true'">
      <Message Text="Attempting to copy $(TargetFileName) to $(KrysalisDirectory)" Importance="high" />
      <Copy SourceFiles="$(TargetDir)$(TargetFileName)" DestinationFolder="$(KrysalisDirectory)" ContinueOnError="true" />

      <Message Text="Copying assets from $(AssetsDirectory) to $(KrysalisDirectory)" Importance="high" />

      <Copy SourceFiles="@(AssetFiles)" DestinationFolder="$(KrysalisDirectory)" />
  </Target>

</Project>